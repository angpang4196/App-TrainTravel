<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="replys">
	<select id="findById" resultType="data.Reply" parameterType="string">
		select * from reviews where id = #{id}
	</select>
	<insert id="createReply" parameterType="hashmap">
		insert into reviews(ID,TITLE,WRITER,CONTENT) values(#{id}, #{title},#{writer},#{content})
	</insert>
	<update id="updateViews">
		update reviews set views = views + 1 where Id = #{boardId}
	</update>
</mapper>
